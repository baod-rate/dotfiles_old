" indentation options
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab

" UI options
set showcmd         " Show (partial) command in status line
set relativenumber
set number
set ruler
set background=dark
set mouse=a

" search options
set showmatch       " jump to matching brace
set hlsearch        " highlight search matches
set incsearch       " jump to search result while typing
set ignorecase
set smartcase

" long line options
set autoindent
set textwidth=79
set formatoptions=c,q,r

filetype plugin indent on
syntax on
